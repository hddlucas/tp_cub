<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.user_admin.sensores.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="222dp"
        android:layout_height="0dp"
        android:layout_marginTop="33dp"
        android:text="Computação Obíqua"
        android:textAlignment="center"
        android:textColor="@color/textColorPrimary"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startBtn"
        android:layout_width="163dp"
        android:layout_height="50dp"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.868"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.197" />

    <Button
        android:id="@+id/stopBtn"
        android:layout_width="163dp"
        android:layout_height="50dp"
        android:onClick="stopBtnClick"
        android:text="Stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.868"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.338" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="163dp"
        android:layout_height="50dp"
        android:onClick="submitBtnClick"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.868"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.464" />

    <RadioGroup
        android:id="@+id/atividadesRadioGrp"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="260dp"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/startBtn"
        app:layout_constraintHorizontal_bias="0.545"

        app:layout_constraintStart_toStartOf="parent">


        <RadioButton
            android:id="@+id/correrRadioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Correr"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"
            tools:layout_editor_absoluteY="145dp" />

        <RadioButton
            android:id="@+id/andarRadioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Andar"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/descerRadioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descer"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/subirRadioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subir"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/agacharRadioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agachar"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp" />

    </RadioGroup>


    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="325dp"
        android:layout_height="147dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977">

        <TextView
            android:id="@+id/logsTxtBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="33dp"
            android:inputType="textMultiLine"
            android:textColor="@color/textColorPrimary" />


    </ScrollView>

    <CheckBox
        android:id="@+id/automaticModeCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Modo Automático"
        android:textColor="@color/textColorPrimary"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/ScrollView01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
